{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist",      // Specify output directory
    "rootDir": "./src",      // Specify root directory of input files
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],   // Include all TypeScript files in the src directory
  "exclude": ["node_modules"]
}
